{
	"compilerOptions": {
		"jsx": "react",
		"esModuleInterop": true,
		"target": "ES6",
		"outDir": "./lib",
		"declaration": true,
		"sourceMap": true,
		"removeComments": true,
		"allowJs": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"**/*.test.*",
		"**/*.setup.*",
		"**/*.stories.*"
	]
}