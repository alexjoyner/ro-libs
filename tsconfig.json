{
	"include": ["packages/**/src"],
	"exclude": [
		"node_modules",
		"blueprint-templates",
		"**/*.test.*",
		"**/*.setup.*",
		"**/*.stories.*"
	],
	"compilerOptions": {
		"jsx": "react",
		"target": "es5",
		"outDir": "./lib",
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": true,
		"allowJs": true,
		"composite": true,
		"baseUrl": "."
	}
}